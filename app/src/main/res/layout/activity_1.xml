<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Act1No1Judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text='Nomor 1'
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/Act1No1Edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="text"
        />

    <Button
        android:onClick="Act1No1Button"
        android:id="@+id/Act1No1Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tampilkan"
        />

    <TextView
        android:id="@+id/Act1No1Hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text='Hasil Nomor 1'
        android:textSize="20sp"
        android:layout_marginBottom="50dp"
        />

    <TextView
        android:id="@+id/Act1No2Judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text='Nomor 2'
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/Act1No2Edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Berat Badan"
        />

    <EditText
        android:id="@+id/Act1No2Edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tinggi Badan"
        />

    <Button
        android:onClick="Act1No2Button"
        android:id="@+id/Act1No2Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung"
        />

    <TextView
        android:id="@+id/Act1No2Hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text='Hasil Nomor 2'
        android:textSize="20sp"
        />

</LinearLayout>